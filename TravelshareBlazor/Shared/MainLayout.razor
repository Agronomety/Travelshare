@inherits LayoutComponentBase

<PageTitle>Travelshare Blog</PageTitle>

<div class="travel-site">
    <header class="site-header">
        <NavMenu />
    </header>

    <main>
        <div class="container-fluid p-0">
            @Body
        </div>
    </main>

    <footer class="site-footer">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <h5>About Travelshare</h5>
                    <p>Share your travel adventures with the world. Discover new destinations and connect with fellow travelers.</p>
                </div>
                <div class="col-md-4">
                    <h5>Quick Links</h5>
                    <ul class="list-unstyled">
                        <li><a href="/">Home</a></li>
                        <li><a href="/blogposts">Blog Posts</a></li>
                        <li><a href="/about">About Us</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h5>Connect With Us</h5>
                    <div class="social-icons">
                        <a href="#"><i class="fab fa-facebook-f"></i></a>
                        <a href="#"><i class="fab fa-twitter"></i></a>
                        <a href="#"><i class="fab fa-instagram"></i></a>
                        <a href="#"><i class="fab fa-pinterest"></i></a>
                    </div>
                </div>
            </div>
            <div class="copyright text-center mt-4">
                <p>&copy; @DateTime.Now.Year Travelshare. All rights reserved.</p>
            </div>
        </div>
    </footer>
</div>